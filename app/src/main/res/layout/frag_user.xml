<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:background="#ffffff">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Information"
        android:id="@+id/user_frag_title"
        android:textColor="@color/blacky"
        android:textSize="30dp"
        android:fontFamily="sans-serif-condensed"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Switch"/>

    <ImageView
        android:layout_width="247dp"
        android:layout_height="176dp"
        app:srcCompat="@drawable/anonymous_icon"
        android:id="@+id/imageView"
        android:layout_weight="0.15"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.3">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/user_frag_username_title"
            android:text="User Name:"
            android:layout_weight="0.3"
            android:textColor="#000000"
            android:layout_marginRight="24dp"
            android:layout_gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Switch">
        </TextView>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/user_frag_username_value"
            android:layout_marginLeft="14dp"
            android:textColor="#009090"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.3"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Switch"
            android:text="TooYoung-TooSimple">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/user_frag_useremail_title"
            android:textColor="#000000"
            android:text="User Email:"
            android:layout_weight="0.3"
            android:layout_marginRight="24dp"
            android:layout_gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Switch">
        </TextView>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/user_frag_useremail_value"
            android:layout_marginLeft="14dp"
            android:textColor="#009090"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.3"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Switch"
            android:text="freex@uwaterloo.ca">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/user_frag_cadBalance_title"
            android:text="CAD Balance:"
            android:layout_weight="0.3"
            android:layout_marginRight="114dp"
            android:textColor="#FF0000"
            android:layout_gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Switch">
        </TextView>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#FF0000"
            android:id="@+id/user_frag_cadBalance_value"
            android:layout_marginLeft="14dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.3"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Switch"
            android:text="1867.71">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/user_frag_rmbBalance_title"
            android:textColor="#FFBB00"
            android:text="RMB Balance:"
            android:layout_weight="0.3"
            android:layout_marginRight="114dp"
            android:layout_gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Switch">
        </TextView>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/user_frag_rmbBalance_value"
            android:layout_marginLeft="14dp"
            android:textColor="#FFBB00"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.3"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Switch"
            android:text="1989.64">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/user_frag_usdBalance_title"
            android:text="USD Balance:"
            android:textColor="#0000AA"
            android:layout_weight="0.3"
            android:layout_marginRight="114dp"
            android:layout_gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Switch">
        </TextView>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/user_frag_usdBalance_value"
            android:layout_marginLeft="14dp"
            android:textColor="#0000AA"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.3"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Switch"
            android:text="1776.74">
        </TextView>
    </LinearLayout>

</LinearLayout>