<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:background="#03986f"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="10dp"
    >
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/login_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:background="#FFFFBB33"
            android:contentDescription="@string/app_name"
            android:scaleType="center"
            android:src="@drawable/login_title"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_title"
            android:textColor="#000000"
            android:textSize="34dip"
            android:layout_gravity="center"
            android:textStyle="bold"/>


    </FrameLayout>
    <EditText
        android:id="@+id/id_txt_useremail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"

        android:fontFamily="sans-serif"
        android:hint="Enter your email address"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/email_icon"/>
    <EditText
        android:id="@+id/id_txt_username_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"

        android:fontFamily="sans-serif"
        android:hint="Username"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/user_icon_2"/>

    <EditText
        android:id="@+id/id_txt_password_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:fontFamily="sans-serif"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/password_icon_1"/>
    <EditText
        android:id="@+id/id_txt_password_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:fontFamily="sans-serif"
        android:hint="Confirm your password"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/password_icon_1"/>

    <TextView
        android:id="@+id/error_prompt_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#ff0000"
        android:gravity="center"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="#03986f"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="10dp"
        >
        <Button
            android:id="@+id/signup_cancel_button"
            style="?metaButtonBarButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:layout_weight="0.61"
            android:text="Cancel"
            android:textSize="20sp"
            android:background="@drawable/signin_login_button"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:typeface="monospace"
            android:textStyle="bold"
            />
        <Button

            android:id="@+id/signup_sign_up_button"
            style="?metaButtonBarButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:layout_weight="0.31"
            android:text="Start Trading!"
            android:background="@drawable/signin_signup_button"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:typeface="monospace"
            android:textStyle="bold"/>



    </LinearLayout>


</LinearLayout>