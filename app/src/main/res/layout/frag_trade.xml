<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="Withdrawl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_withdrawl"
        android:layout_alignBaseline="@+id/button_deposit"
        android:layout_alignBottom="@+id/button_deposit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="51dp"
        android:layout_marginEnd="51dp"
        style="@android:style/Widget.Button.Inset" />

    <Button
        android:text="SELL &#x0A;(with your own exchange rate)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_sell"
        android:layout_alignBaseline="@+id/button_buy"
        android:layout_alignBottom="@+id/button_buy"
        android:layout_alignLeft="@+id/button_withdrawl"
        android:layout_alignStart="@+id/button_withdrawl"
        style="@android:style/Widget.Button.Inset" />

    <Button
        android:text="BUY &#x0A;(urgent)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_buy"
        style="@android:style/Widget.DeviceDefault.Light.Button.Inset"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp" />

    <Button
        android:text="Deposit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_deposit"
        style="@android:style/Widget.Button.Inset"
        android:layout_marginBottom="62dp"
        android:layout_above="@+id/button_buy"
        android:layout_alignLeft="@+id/button_buy"
        android:layout_alignStart="@+id/button_buy" />

    <TextView
        android:text="Please Select What You Want To Do:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_withdrawl"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:layout_marginBottom="31dp"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />
</RelativeLayout>




















